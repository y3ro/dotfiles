syntax on

set shortmess-=S

set mouse=a

set autoindent
set backspace=indent,eol,start
set tabstop=4
set shiftwidth=4
set expandtab

set clipboard=unnamedplus

nnoremap <c-k> <esc>
inoremap <c-k> <esc>
vnoremap <c-k> <esc>
xnoremap <c-k> <esc>
snoremap <c-k> <esc>
cnoremap <c-k> <C-C>
onoremap <c-k> <esc>

nnoremap <c-l> :

inoremap <c-f> <right>
inoremap <c-b> <left>
